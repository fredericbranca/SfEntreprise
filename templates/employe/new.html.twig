{% extends 'base.html.twig' %}

{% block title %}
    {% if edit %}
        Modifier un employé
    {% else %}
        Ajouter un employé
    {% endif %}
    
{% endblock %}

{% block body %}

    {% if edit %}
        <h1>Modifier un employé</h1>
    {% else %}
        <h1>Ajouter un employé</h1>
    {% endif %} 

    {# {{ form(formAddEmploye) }} #}

    {{ form_start(formAddEmploye) }}
        <div class="row">
            <div class="col-sm">
                {{ form_row(formAddEmploye.nom) }}
            </div>
            <div class="col-sm">
                {{ form_row(formAddEmploye.prenom) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                {{ form_row(formAddEmploye.dateNaissance) }}
            </div>
            <div class="col-sm">
                {{ form_row(formAddEmploye.dateEmbauche) }}
            </div>
        </div>
            {{ form_row(formAddEmploye.entreprise) }}
            {{ form_row(formAddEmploye.ville) }}
            {{ form_row(formAddEmploye.Valider) }}
    {{ form_end(formAddEmploye) }}

{% endblock %}